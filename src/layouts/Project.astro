---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
type Props = CollectionEntry<'project'>['data'];

const { title, shortDescription, longDescription, image, github, liveLink, tech } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={shortDescription} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
		  <h1>{title}</h1>
		</main>
		<Footer />
	</body>
</html>
