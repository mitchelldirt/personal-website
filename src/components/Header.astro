<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.mobile-header-btn {
	    display: none;
	}



	.internal-links {
        display: block;
        visibility: visible;
        opacity: 1;
        position: static;
        height: auto;
        width: auto;
    }

    .mobile-header-btn-close {
        display: none;
    }

	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 950px) {
		.social-links {
			display: none;
		}
	}

	@media (max-width: 750px) {
	    nav {
			justify-content: center;
			align-items: center;
			height: 50px;
					}
		.title-link {
		padding: 0 !important;
		box-sizing: border-box;
        }

        .mobile-header-btn, .mobile-header-btn-close {
            justify-self: flex-end;
            display: block;
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 0;
            margin: 0;
            position: absolute;
            top: 7px;
            right: 15px;
        }


	    .internal-links {
			z-index: 1000;
			opacity: 0;
			visibility: hidden;
			display: flex;
	        flex-direction: column;
		    align-items: center;
		    justify-content: center;
			position: absolute;
			height: 100vh;
			width: 100%;
			top: 0;
			left: 0;
			background-color: white;
					}
					.show {
					    opacity: 1;
        visibility: visible;
        display: flex;
					}
		}
	}
</style>
