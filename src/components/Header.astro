---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';


---

<script>
  const mobileHeaderBtn = document.querySelector('.mobile-header-btn');
  const mobileHeaderBtnClose = document.querySelector('.mobile-header-btn-close');
  const internalLinks = document.querySelector('.internal-links');

  [mobileHeaderBtn, mobileHeaderBtnClose].forEach((btn) => {
    btn?.addEventListener('click', () => {
      internalLinks?.classList.toggle('show');
    });
  });
</script>

